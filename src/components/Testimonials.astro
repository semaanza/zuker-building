---
import { HeadingIcon } from "tinacms"

interface Props {
	heading: string
	subHeading?: string
	testimonials: {
		name: string
		quote: string
	}[]
}

const { heading, subHeading, testimonials } = Astro.props
---

<div
	id="testimonials"
	aria-label="Testimonials"
	class="p-4 flex items-center flex-col text-slate-800"
	role="region"
>
	<div class="flex flex-col items-center mb-4 mt-4">
		<h1 class="text-3xl text-slate-600">{heading}</h1>
		<h2 class="text-xl">{subHeading}</h2>
	</div>
	<div
		class="flex flex-col sm:flex-row items-center justify-evenly m-5"
		role="list"
		aria-label="Client testimonials"
	>
		{
			testimonials.map((testimonial, index) => (
				<div
					class="flex w-full sm:w-1/3 m-5 flex-wrap sm:flex-row items-center justify-evenly mb-10 mt-10 border-solid border-2 rounded-2xl bg-slate-200 border-fuchsia-950 pb-4"
					role="listitem"
				>
					<blockquote>
						<p class="p-4">{testimonial.quote}</p>
						<footer class="text-center">
							<cite class="text-2xl text-center  not-italic">
								{testimonial.name}
							</cite>
						</footer>
					</blockquote>
				</div>
			))
		}
	</div>
</div>
