---
import { client } from "../../../tina/__generated__/client"

const footerData = await client.queries.global({
	relativePath: "footer.json",
})

console.log(footerData)
---

<footer class="w-full bg-slate-500 h-52 flex">
	<div class="w-full flex flex-col items-center justify-between p-2">
		<div class="flex h-full w-full justify-evenly items-center">
			{
				footerData?.data?.global?.footerSocialLinks?.map(
					(navItem: {
						socialHref: string
						socialName: string
						socialImage: string
					}) => (
						<a href={navItem?.socialHref}>
							<img
								class="w-8 h-8"
								src={navItem?.socialImage}
								alt={navItem?.socialName}
								height="30px"
								width="30px"
							/>
						</a>
					),
				)
			}
		</div>
		<div>&copy; {new Date().getFullYear()} Zuker Building</div>
	</div>
</footer>
