---
import { client } from "../../../tina/__generated__/client"

const footerData = await client.queries.global({
	relativePath: "footer.json",
})
---

<footer
	class="w-full bg-slate-500 h-52 flex"
	role="contentinfo"
	aria-label="Site footer"
>
	<div class="w-full flex flex-col items-center justify-evenly p-2">
		<nav
			class="flex h-1/3 w-full justify-center items-center"
			aria-label="Social media links"
		>
			{
				footerData?.data?.global?.footerSocialLinks?.map(
					(item: {
						socialHref: string
						socialName: string
						socialImage: string
					}) => (
						<a
							href={`https://www.${item?.socialHref}`}
							target="_blank"
							rel="noopener noreferrer"
							aria-label={`Visit our ${item?.socialName} page`}
						>
							<img
								class="w-8 h-8"
								src={item?.socialImage}
								alt=""
								aria-hidden="true"
								height="30px"
								width="30px"
							/>
						</a>
					),
				)
			}
		</nav>
		<div>
			<p class="text-xl">Proudly serving Oakland County</p>
		</div>
		<div>&copy; {new Date().getFullYear()} Zuker Building</div>
	</div>
</footer>
